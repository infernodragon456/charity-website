            }
            40% {
                clip-path: xywh(0 0 100% 100% round 52px);
            }
            50% {
                clip-path: xywh(0 0 100% 100% round 44px);
            }
            60% {
                clip-path: xywh(0 0 100% 100% round 36px);
            }
            70% {
                clip-path: xywh(0 0 100% 100% round 28px);
            }
            80% {
                clip-path: xywh(0 0 100% 100% round 24px);
            }
            90% {
                clip-path: xywh(0 0 100% 100% round 20px);
            }
            100% {
                transform: translateY(0);
                clip-path: xywh(0 0 100% 100% round 20px);
            }
        }
        @keyframes fade-up-img {
            0% {
                clip-path: xywh(0 0 100% 100% round 20px);
            }
            5% {
                clip-path: xywh(0 0 100% 100% round 24px);
