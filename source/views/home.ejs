        .card img{
            clip-path: xywh(0 0 100% 100% round 20px);
            animation: reverse-fade-up-img 0.5s forwards;    
        }
        .card:hover img{
            transform: translateY(-55px);
            animation: fade-up-img 0.15s forwards;
        }
