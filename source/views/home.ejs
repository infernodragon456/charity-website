        @keyframes reverse-fade-up-img {
            0% {
                transform: translateY(-50px);
                clip-path: circle();
            }
            5% {
                clip-path: xywh(0 0 100% 100% round 92px);
            }
            10% {
                clip-path: xywh(0 0 100% 100% round 84px);
            }
            15% {
                clip-path: xywh(0 0 100% 100% round 76px);
            }
            20% {
